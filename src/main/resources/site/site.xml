<?xml version="1.0" encoding="UTF-8"?>
<site>
  <config>
    <field-set name="info">
      <label>Sosiale medier</label>
      <items>
        <input type="TextLine" name="disqusShortName">
          <label>Disqus short name</label>
          <occurrences minimum="1" maximum="1"/>
        </input> 
        <input type="TextLine" name="facebookAppId">
          <label>Facebook App ID</label>
          <occurrences minimum="0" maximum="1"/>
        </input>                             
      </items>
    </field-set>
    <field-set name="defaultTexts">
      <label>Standard-tekster</label>
      <items>
        <input type="HtmlArea" name="defualtThankYouText">
          <label>Takk</label>
          <occurrences minimum="1" maximum="1"/>
        </input>                            
      </items>      
    </field-set>
    <field-set name="globalMenu">
      <label>Global meny</label>         
      <items>   
        <input type="TextLine" name="logoTypoText">
          <label>Tekst ved logo</label>
          <occurrences minimum="1" maximum="1"/>
        </input>                  
        <item-set name="globalMenuItems">
          <label>Menypunkt</label>
          <items>
            <input type="ContentSelector" name="menuItem">
              <label>Menypunkt</label>
              <immutable>false</immutable>
              <indexed>true</indexed>
              <occurrences minimum="1" maximum="1"/>
              <config>
                <relationship-type>related-menuitem</relationship-type>
              </config>
            </input>
            <input name="text" type="TextLine">
              <label>Tekst</label>
              <occurrences minimum="1" maximum="1"/>
            </input>         
          </items>
          <immutable>false</immutable>
          <occurrences minimum="0" maximum="3"/>
        </item-set>       
      </items>
    </field-set>        
    <field-set name="footer">
      <label>Footer</label>
      <items>      
        <input type="TextLine" name="departmentName">
          <label>Navn p√• etaten</label>
          <occurrences minimum="1" maximum="1"/>
        </input>        
        <item-set name="footerLinks">
          <label>Lenke i footer</label>
          <items>
            <input name="url" type="TextLine">
              <label>URL</label>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input name="text" type="TextLine">
              <label>Tekst</label>
              <occurrences minimum="1" maximum="1"/>
            </input>         
          </items>
          <immutable>false</immutable>
          <occurrences minimum="0" maximum="10"/>
        </item-set>       
      </items>
    </field-set>
    <field-set name="newsletter">
      <label>Nyhetsbrev</label>
      <items>      
        <input type="ContentSelector" name="newsletterSubscriberArchive">
          <label>Arkiv for abonneneter</label>
          <immutable>false</immutable>
          <indexed>true</indexed>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <relationship-type>related-menuitem</relationship-type>
            <allowed-to-types>
              <content-type>base:folder</content-type>   
            </allowed-to-types>
          </config>
        </input>
        <input type="ContentSelector" name="newsletterConfirmationPage">
          <label>Bekreftelsesside for nyhetsbrev</label>
          <immutable>false</immutable>
          <indexed>true</indexed>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <relationship-type>related-menuitem</relationship-type>
            <allowed-to-types>
              <content-type>simple</content-type>
            </allowed-to-types>
          </config>
        </input>       
      </items>
    </field-set>
  </config>
</site>