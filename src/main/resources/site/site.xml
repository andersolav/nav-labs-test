<?xml version="1.0" encoding="UTF-8"?>
<site>
  <config>
    <field-set name="info">
      <label>Info</label>
      <items>
        <input type="TextLine" name="siteUrl">
          <label>URL</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="TextLine" name="disqusShortName">
          <label>Disqus short name</label>
          <occurrences minimum="1" maximum="1"/>
        </input>        
      </items>
    </field-set>
    <field-set name="footer">
      <label>Footer</label>
      <items>
        <input type="TextLine" name="departmentName">
          <label>Navn p√• etaten</label>
          <occurrences minimum="1" maximum="1"/>
        </input>        
        <item-set name="footerLinks">
          <label>Link</label>
          <items>
            <input name="url" type="TextLine">
              <label>URL</label>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input name="text" type="TextLine">
              <label>Tekst</label>
              <occurrences minimum="1" maximum="1"/>
            </input>         
          </items>
          <immutable>false</immutable>
          <occurrences minimum="0" maximum="10"/>
        </item-set>       
      </items>
    </field-set>    
  </config>
</site>