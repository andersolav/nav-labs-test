<content-type>
  <display-name>Abonnent</display-name>
  <super-type>base:structured</super-type>
  <is-abstract>false</is-abstract>
  <is-final>true</is-final>
  <is-built-in>false</is-built-in>
  <allow-child-content>true</allow-child-content>
  <form>
    <input type="TextLine" name="emailAddress">
      <label>E-post-adresse</label>
      <immutable>false</immutable>
      <indexed>true</indexed>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="CheckBox" name="isConfirmed">
      <label>Verifisert</label>
      <immutable>false</immutable>
      <indexed>true</indexed>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="ContentSelector" name="contentOfInterest">
      <label>Innhold av interesse</label>
      <immutable>false</immutable>
      <indexed>true</indexed>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <relationship-type>related-menuitem</relationship-type>
      </config>
    </input>       
  </form>
</content-type>